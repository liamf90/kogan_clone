<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Border -->
    <item>
        <shape>
            <solid android:color="@color/colorPrimary"/>
        </shape>
        <size
            android:width="40dp"
            android:height="40dp"/>
    </item>
    <!-- Body -->
    <item android:left="1dip"
        android:top="1dp"
        android:bottom="1dp">
        <shape>
            <solid android:color="@android:color/white"/>
            <size
                android:width="40dp"
                android:height="40dp"/>
        </shape>

    </item>
</layer-list>